.container {
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title {
    font-size: 36rpx;
    margin-bottom: 50rpx;
}

.input-group {
    width: 100%;
    margin-bottom: 30rpx;
}

input {
    width: 100%;
    height: 60rpx;
    padding: 0 20rpx;
    border: 1rpx solid #ccc;
    border-radius: 8rpx;
}

.login-btn {
    width: 100%;
    height: 60rpx;
    background-color: #1AAD19;
    color: #fff;
    border-radius: 8rpx;
    font-size: 28rpx;
}