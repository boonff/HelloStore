<view class="container">
    <view class="title">登录</view>

    <view class="input-group">
        <text>用户名</text>
        <input type="text" placeholder="请输入用户名" bindinput="onUsernameInput" />
    </view>

    <view class="input-group">
        <text>密码</text>
        <input type="password" placeholder="请输入密码" bindinput="onPasswordInput" />
    </view>

    <button bindtap="handleLogin" class="login-btn">登录</button>

    <view class="switch">
        <text>没有账号？</text>
        <navigator url="/pages/auth/register/register">去注册</navigator>
    </view>
</view>