.container {
    padding: 20px;
    background-color: #fff;
    min-height: 100vh;
}

.title {
    font-size: 24px;
    font-weight: bold;
    text-align: center;
    margin-bottom: 30px;
}

.input-group {
    margin-bottom: 20px;
}

.input-group text {
    display: block;
    font-size: 16px;
    margin-bottom: 5px;
}

.input-group input {
    width: 100%;
    height: 40px;
    line-height: 40px;
    padding: 0 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.picker {
    width: 100%;
    height: 40px;
    line-height: 40px;
    padding: 0 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    color: #333;
}

.register-btn {
    width: 100%;
    height: 44px;
    background-color: #1aad19;
    color: #fff;
    border-radius: 5px;
    font-size: 16px;
}

.switch {
    margin-top: 20px;
    text-align: center;
}

.switch text {
    color: #888;
    margin-right: 5px;
}